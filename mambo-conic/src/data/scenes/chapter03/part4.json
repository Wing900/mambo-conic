    {
      "id": "ch03_s09_quiz",
      "type": "choice",
      "mambo": { "expression": "thinking" },
      "dialogue": { "text": "以下哪个是椭圆的标准方程？" },
      "blackboard": { "type": "image", "src": "/labimage/ch03/standard_eq_axes.svg" },
      "options": [
        { "text": "A. x\u00b2/a\u00b2 - y\u00b2/b\u00b2 = 1 (a>b>0)", "correct": false, "next": "ch03_s09_wrong" },
        { "text": "B. x\u00b2/a\u00b2 + y\u00b2/b\u00b2 = 1 (a>b>0)，焦点在 x 轴", "correct": true, "next": "ch03_s09_correct", "scoreChange": 10 },
        { "text": "C. x\u00b2/a\u00b2 + y\u00b2/b\u00b2 = 1 (b>a>0)，焦点在 x 轴", "correct": false, "next": "ch03_s09_wrong" }
