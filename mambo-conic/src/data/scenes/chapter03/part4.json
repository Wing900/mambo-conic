    {
      "id": "ch03_s08_correct",
      "type": "dialogue",
      "mambo": { "expression": "happy", "action": "bounce" },
      "dialogue": { "text": "记住了，谁的分母大，焦点就在谁的轴上！" },
      "blackboard": { "type": "lab", "labType": "lab-classify" },
      "next": "ch03_s09_intro"
    },
    {
      "id": "ch03_s08_wrong",
      "type": "dialogue",
      "mambo": { "expression": "sad", "action": "shake" },
      "dialogue": { "text": "再仔细看看实验，焦点所在的轴对应的分母一定是更大的那个哦！" },
